@page
@model TheLivery.Pages.ContactModel
@{
}

<div class="section-contact d-flex align-items-center">
    <div class="h4 text-light">Contact</div>
</div>
<div class="form_section d-flex justify-content-around" style="padding-top:10%;padding-bottom: 10%;">
    <div class="left-side">
        <div class="h3">Ai o intrebare?</div>
        <form method="post">
            <label for="nume">Nume:</label>
            <input type="text" id="nume" name="nume" class="form-control"/>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" class="form-control" />
            <label for="intrebare">Intrebarea:</label>
            <textarea name="intrebare" class="form-control" rows="4"></textarea>
            <input type="submit" name="submit" value="Intreaba" class="button-submit text-light w-100 mt-3"/>
        </form>
    </div>
    <div class="right-side d-flex align-items-center w-50 justify-content-around">
        <div class="d-flex flex-column align-items-center">
            <ion-icon name="location-outline" style="font-size:32px"></ion-icon>
            <div class="h6 mt-1">Str. Viteazului, nr.110A</div>
        </div>
        <div class="d-flex flex-column align-items-center">
            <ion-icon name="call-outline" style="font-size:32px"></ion-icon>
            <div class="h6 mt-1">+009548572</div>
        </div>
        <div class="d-flex flex-column align-items-center">
            <ion-icon name="mail-open-outline" style="font-size:32px"></ion-icon>
            <div class="h6 mt-1">thelivery@gmail.com</div>
        </div>
    </div>
</div>